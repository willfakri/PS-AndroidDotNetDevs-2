<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".ProvideInfoActivity">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="@string/course_label_text"
      android:id="@+id/course_label_textview"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"/>

  <RadioGroup
      android:id="@+id/classSelectGroup"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_below="@+id/course_label_textview"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="11dp">

    <RadioButton
        android:id="@+id/classGettingStarted"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/classGettingStarted_radiobutton_text"
        android:checked="true"
        />

    <RadioButton
        android:id="@+id/classIntents"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/classIntents_radiobutton_text"
        />

    <RadioButton
        android:id="@+id/classActionBar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/classActionBar_radiobutton_text"
        />

    <RadioButton
        android:id="@+id/classAsyncAndServices"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/classAsyncAndServices_radiobutton_text"
        />

    <RadioButton
        android:id="@+id/class4NewFeatures"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/class4NewFeatures_radiobutton_text"
        />
  </RadioGroup>

  <EditText
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:ems="10"
      android:id="@+id/your_name_edittext"
      android:layout_centerVertical="true"
      android:layout_alignLeft="@+id/classSelectGroup"
      android:layout_alignRight="@+id/classSelectGroup"
      android:hint="@string/your_name_edittext_hint"/>

  <EditText
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="textEmailAddress"
      android:ems="10"
      android:id="@+id/email_edittext"
      android:layout_below="@+id/your_name_edittext"
      android:layout_alignLeft="@+id/your_name_edittext"
      android:layout_alignRight="@+id/your_name_edittext"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:hint="@string/email_edittext_hint"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/done_button_text"
      android:id="@+id/done_button"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentStart="true"/>


</RelativeLayout>
