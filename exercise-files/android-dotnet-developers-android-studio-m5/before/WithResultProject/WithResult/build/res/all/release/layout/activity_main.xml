<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/provide_info_button_text"
      android:id="@+id/provideInfoButton"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/take_picture_button_text"
      android:id="@+id/takePictureButton"
      android:layout_below="@+id/provideInfoButton"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:layout_marginTop="@dimen/activity_vertical_margin"/>

  <ImageView
      android:layout_width="160dp"
      android:layout_height="160dp"
      android:id="@+id/thumbnailImageview"
      android:layout_above="@+id/classNameTextView"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/activity_vertical_margin"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:id="@+id/classNameTextView"
      android:layout_above="@+id/personNameTextView"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:layout_marginBottom="@dimen/activity_vertical_margin"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:id="@+id/personNameTextView"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:layout_above="@+id/emailTextView"
      android:layout_marginBottom="@dimen/activity_vertical_margin"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:id="@+id/emailTextView"
      android:layout_above="@+id/sendtButton"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:layout_marginBottom="@dimen/activity_vertical_margin"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/send_button_text"
      android:id="@+id/sendtButton"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      />

</RelativeLayout>
